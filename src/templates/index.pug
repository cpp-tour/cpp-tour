include _common.pug
+head(title="A Tour of C++")

mixin sidebar_link(id, title)
    a.sidebar__item(id=id href="#"+id)=title

body.layout
    // Page header
    nav.layout__header#header
        a.layout__header__menu="A Tour of C++"
        span="Lesson name"
    div.layout__content
        // Content
        div.main#main
            div.main__content#aa
                h2.content__header="Introduction"
                p.
                    Content

            div.main__compiler#bb
                div.main__compiler__editor#editor
                div.main__compiler__menu#editor_menu
                    button.button#reset="Reset"
                    button.button#run="Run"
                div.main__compiler__output
                    pre#output

    // Sidebar
    div.sidebar#sidebar.hidden
        +sidebar_link("Introduction", "Introduction")
        +sidebar_link("0", "Lesson 0: Getting Started")

    +noscript
