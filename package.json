{
    "name": "cpp-tour",
    "version": "1.0.0",
    "private": true,
    "description": "Front-end for CPP-Tour",
    "main": "index.js",
    "scripts": {
        "test": "ava --verbose",
        "lint:style": "stylelint src/styles",
        "lint:js": "eslint . --ext .js --ignore-pattern public",
        "lint": "npm run lint:style && npm run lint:js",
        "start": "webpack-dev-server",
        "build": "webpack",
        "build:p": "webpack -p",
        "build:profile": "webpack --profile --json > stats.json",
        "build:analyze": "webpack-bundle-analyzer stats.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Leandros/cpp-tour.io.git"
    },
    "keywords": [],
    "author": "Douman <douman@gmx.se>",
    "license": "MIT",
    "dependencies": {
        "codemirror": "5",
        "ansi_up": "2",
        "split.js": "^1.3.5"
    },
    "devDependencies": {
        "html-loader": "0",
        "asciidoctor-loader": "0",
        "autoprefixer": "7",
        "ava": "0",
        "babel-core": "6",
        "babel-loader": "7",
        "babel-preset-env": "1",
        "css-loader": "0",
        "eslint": "4",
        "eslint-loader": "1",
        "eslint-plugin-compat": "2",
        "extract-text-webpack-plugin": "3",
        "file-loader": "1",
        "html-webpack-plugin": "2",
        "json5-loader": "1",
        "node-fetch": "1",
        "postcss-import": "11",
        "postcss-loader": "2",
        "postcss-nesting": "4",
        "pug": "^2.0.0-rc.4",
        "pug-loader": "2",
        "purecss": "1",
        "raw-loader": "0",
        "script-ext-html-webpack-plugin": "1",
        "stylelint": "8",
        "stylelint-config-standard": "18",
        "sugarss": "1",
        "webpack": "3",
        "webpack-dev-server": "2"
    },
    "ava": {
        "files": [
            "test/**/*.js"
        ],
        "source": [
            "src/**/*.js"
        ],
        "failFast": true
    },
    "babel": {
        "presets": [
            [
                "env",
                {
                    "modules": false
                }
            ]
        ]
    },
    "browserslist": [
        "Last 2 versions",
        "ie 11"
    ]
}
